<Window x:Class="Studienarbeit.QuerEigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studienarbeit"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Eigenschaften - Querfeldein" Height="105" Width="230" WindowStyle="ToolWindow">
    <Grid>
        <Label Content="_X-Versatz:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <Label Content="_Y-Versatz:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>

        <Button x:Name="Ok" Content="Ok" HorizontalAlignment="Left" Margin="137,10,0,0" VerticalAlignment="Top" Width="77" Click="Ok_Click"/>
        <Button x:Name="Abbruch" Content="Abbrechen" HorizontalAlignment="Left" Margin="137,54,0,0" VerticalAlignment="Top" Width="77" Click="Abbruch_Click"/>
        <local:ScrollProp MinVal="-10" MaxVal="10" x:Name="XVersatz" HorizontalAlignment="Left" Margin="75,10,0,0" VerticalAlignment="Top" Height="23" Width="54"/>
        <local:ScrollProp MinVal="-10" MaxVal="10" x:Name="YVersatz" HorizontalAlignment="Left" Margin="75,51,0,0" VerticalAlignment="Top" Height="23" Width="54"/>
    </Grid>
</Window>
