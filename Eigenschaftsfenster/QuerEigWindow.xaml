<Window x:Class="Studienarbeit.QuerEigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studienarbeit"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="Eigenschaften - Querfeldein">
    <Grid Margin="0,0,5,5">
        <Label Content="_X-Versatz:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>

        <Label Content="_Y-Versatz:" HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top"/>

        <local:ScrollProp x:Name="XVers" MinVal="-10" MaxVal="10" HorizontalAlignment="Left" Margin="68,2,0,0" VerticalAlignment="Top" Height="23" Width="54"/>
        <local:ScrollProp x:Name="YVers" MinVal="-10" MaxVal="10" HorizontalAlignment="Left" Margin="68,33,0,0" VerticalAlignment="Top" Height="23" Width="54"/>

        <Button x:Name="Ok" Content="Ok" IsDefault="True" HorizontalAlignment="Left" Margin="127,3,0,0" VerticalAlignment="Top" Width="77" Click="Ok_Click"/>
        <Button x:Name="Abbruch" Content="Abbrechen" IsCancel="True" HorizontalAlignment="Left" Margin="127,35,0,0" VerticalAlignment="Top" Width="77" Click="Abbruch_Click"/>
    </Grid>
</Window>
